# Database Configuration
# MongoDB connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
DATABASE_URL="mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database?appName=YourApp"

# Server Configuration
PORT=3000
NODE_ENV=production

# Auth Configuration (OIDC)
AUTH_ISSUER_URL="https://your-tenant.logto.app/oidc"
AUTH_CLIENT_ID="your_client_id"
AUTH_CLIENT_SECRET="your_client_secret"
AUTH_REDIRECT_URI="http://localhost:3000/auth/callback"
